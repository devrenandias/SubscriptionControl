@model SubscriptionControl.Models.Subscription

@{
    ViewData["Title"] = "Excluir Serviço Contratado";
}

<h1> @ViewData["Title"] </h1>
<h3>Tem certeza que deseja excluir este serviço de Streaming: @Model.ServiceSubscription, de valor: @Model.Price no plano: @Model.PlanType?</h3>


<div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ServiceSubscription)
        </dt>
        <dd class="col-sm-10">
          @Html.DisplayFor(model => model.ServiceSubscription)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Price)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PlanType)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PlanType)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.StartSubscription)
        </dt>
        <dd class="col-sm-10">
            @Model.StartSubscription.ToString("dd/MM/yyyy")
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PaymentMethod)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PaymentMethod)
        </dd>
    </dl>


    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Excluir" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-warning">Voltar</a>
    </form>


</div>

