@model SubscriptionControl.Models.Subscription

@{
    ViewData["Title"] = "Adicionar novo Streaming";
}

<h1> @ViewData["Title"] </h1>
<h3> Preencha os dados necessarios</h3>
</hr>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>



            <div class="form-group">
                <label asp-for="ServiceSubscription" class="control-label"></label>
                <input asp-for="ServiceSubscription" class="form-control" />
                <span asp-validation-for="ServiceSubscription" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" type="number" step="0.01" min="0" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="PlanType" class="control-label"></label>
                <select asp-for="PlanType" class="form-control"
                        asp-items="Html.GetEnumSelectList<SubscriptionControl.Enums.PlanTypeEnum>()"></select>
                <span asp-validation-for="PlanType" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="StartSubscription" class="control-label"></label>
                <input asp-for="StartSubscription" class="form-control"  type="date"/>
                <span asp-validation-for="StartSubscription" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="PaymentMethod" class="control-label"></label>
                <select asp-for="PaymentMethod" class="form-control"
                        asp-items="Html.GetEnumSelectList<SubscriptionControl.Enums.PaymentMethodEnum>()"></select>
                <span asp-validation-for="PaymentMethod" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Criar" class="btn btn-primary"/>  |
                <a asp-action="Index" class="btn btn-warning">Voltar</a>
            </div>

        </form>
    </div>
</div>

